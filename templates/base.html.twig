<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet"
        href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
            <div class="container">
            <a class="navbar-brand" href="{{ path('home')}}">ebaille</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ventes')}}">Ventes <span class="sr-only">(current)</span></a>
                    </li>
                    
                   
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ventes_create')}}">Créer une annonce</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('security_login')}}">Créer une annonce</a>
                    </li>    
                    {% endif %}
                    
                    
                    
                    {% if app.user %}
                    
                    <li class="nav-item">
                        <a href="{{ path('user_articles') }}" class="nav-link"> 
                        Mes annonces
                        </a>
                    </li>
                    
                    {% endif %}
                    
                    
                    
                </ul>
                {% if app.user %}
                

                <span class="navbar-text">
                        Bienvenue {{app.user.getUsername}}
                </span>
                <a href="{{ path('security_logout') }}" class="nav-link"> 
                    Déconnexion
                </a>
                {% else %}

                <a href="{{ path('security_login') }}" class="nav-link"> 
                    Connexion
                </a>
                    
                <a href="{{ path('security_registration') }}" class="nav-link"> 
                    inscription
                </a>
                
                
                {% endif %}
                
            </div>
            </div>
        </nav>
        
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" type="text/javascript"></script>
    
    </body>
</html>
